<!DOCTYPE html>
<html lang="en">
<head>
  <title>Rush job</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_importmap_tags %>
  <%= javascript_import_module_tag "rush_job/application" %>

  <%= stylesheet_link_tag    "rush_job/application", media: "all" %>
</head>
<body class="background-color-<%= current_theme %>">
  <% flash.each do |type, msg| %>
    <div class="alert alert-<%= invert_theme %>" role="alert">
      <%= msg %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
